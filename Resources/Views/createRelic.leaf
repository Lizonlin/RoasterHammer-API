#set("content") {
<h1>#(title)</h1>
<form method="post">
    <div class="form-group">
        <label>Relic Name</label>
        <input type="text" class="form-control" name="name"/>
    </div>
    <div class="form-group">
        <label>Relic Description</label>
        <input type="text" class="form-control" name="description"/>
    </div>

    <div class="form-group">
        <label for="keywords">Keywords</label>
        <select name="keywords[]" class="form-control" id="keywords" placeholder="Keywords" multiple="multiple">
            #for(keyword in keywords) {
            <option>#(keyword.name)</option>
            }
        </select>
    </div>

    <div class="form-group">
        <input type="hidden" class="form-control" name="armyId" value="#(armyId)"/>
    </div>

    #embed("weaponSelectionForm")

    <button type="submit" class="btn btn-primary">
        Submit
    </button>
</form>
}
#embed("base")
